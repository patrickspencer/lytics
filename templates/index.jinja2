<!doctype html>
<html ng-app="lyticsApp">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{% block title %}{% endblock %}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="{{ url_for('static',filename="css/main.css") }}">
        <script src="{{ url_for('static', filename="bower_components/angular/angular.js") }}"></script>
        <script src="{{ url_for('static', filename="js/controllers.js") }}"></script>
    </head>
    <body ng-controller="ExpenditureCtrl">

      {% raw %}
      <div ng-if="!details">
        Loading results...
      </div>
      <ul ng-if="details.Response === 'True'">
        <li>
          <span>{{details.Plot}}</span>
        </li>
        <li>{{search}}</li>
      </ul>
      <div ng-if="details.Response==='False'">
          No results found.
      </div>
      {% endraw %}

    </body>
</html>
