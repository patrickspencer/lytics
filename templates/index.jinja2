<!doctype html>
<html ng-app="lyticsApp">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>{% block title %}{% endblock %}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="{{ url_for('static',filename="css/main.css") }}">
        <script src="{{ url_for('static', filename="bower_components/angular/angular.js") }}"></script>
        <script src="{{ url_for('static', filename="js/controllers.js") }}"></script>
    </head>
    <body>

      {% raw %}

    <div class="wrapper main-table" ng-controller="CreateExpenditure" ng-init="fetchExpenditures()">
      <form ng-submit="createExpenditure()">
          <label for="expenditureDate">Date</label>
          <input type="text" ng-model="date"><br/>
          <label for="expenditureTime">Time</label>
          <input type="text" ng-model="time"><br/>
          <label for="expenditureDescription">Description</label>
          <input type="text" ng-model="description"><br/>
          <label for="expenditureCost">Cost</label>
          <input type="text" ng-model="cost"><br/>
          <input type="submit" id="submit" value="Submit" />
      </form>

      <ul>
      </ul>
        <div class="primary">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Description</th>
                <th>Cost</th>
                <th>ID</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="e in expenditures">
              <td>{{ e.date }}</td>
              <td>{{ e.time }}</td>
              <td>{{ e.description }}</td>
              <td>{{ e.cost }}</td>
              <td>{{ e.id }}</td>
              <td><a ng-click="delete(e.id)" href="#">delete</a></td>
            </tr>
            </tbody>
          </table>
        </div> <!-- /.primary -->
      </div>   <!-- /.wrapper .main-table -->

      {% endraw %}

    </body>
</html>
